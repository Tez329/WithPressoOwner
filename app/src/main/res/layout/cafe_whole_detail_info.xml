                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/outlet" />

            <TextView
                android:id="@+id/info_detail_all_outlet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Table information" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_detail_num_outlet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/whole_detail_num_outlet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:text="@string/num_outlet" />

            <EditText
                android:id="@+id/whole_detail_num_outlet_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="개" />
        </LinearLayout>

        <!--music-->
        <LinearLayout
            android:id="@+id/info_detail_all_music_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whole_detail_music_arrow_imgae"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/info_detail_all_music_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/music" />

            <TextView
                android:id="@+id/info_detail_all_music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Table information" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_detail_music_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/whole_detail_genre_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:text="@string/genre" />

            <EditText
                android:id="@+id/whole_detail_genre_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="16"
                android:hint="예) 실시간 인기 차트 Top 100"
                android:inputType="text" />
        </LinearLayout>

        <!--restroom-->
        <LinearLayout
            android:id="@+id/info_detail_all_restroom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whole_detail_rest_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/info_detail_all_restroom_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/restroom" />

            <TextView
                android:id="@+id/info_detail_all_restroom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Table information" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_detail_rest_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/whole_detail_restroom_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/whole_detail_rest_inout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/restroom_loc" />

                <RadioGroup
                    android:id="@+id/whole_detail_rest_loc_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 있어요 -->
                    <RadioButton
                        android:id="@+id/whole_detail_rest_in_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/restroom_in" />

                    <!-- 없어요 -->
                    <RadioButton
                        android:id="@+id/whole_detail_rest_out_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/restroom_out" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whole_detail_restroom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/whole_detail_rest_gen_sep_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/gender_sep" />

                <RadioGroup
                    android:id="@+id/whole_detail_rest_gen_sep_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 있어요 -->
                    <RadioButton
                        android:id="@+id/whole_detail_gen_sep_yes_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/gen_sep_yes" />

                    <!-- 없어요 -->
                    <RadioButton
                        android:id="@+id/whole_detail_gen_sep_no_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/gen_sep_no" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <!--smoking_room-->
        <LinearLayout
            android:id="@+id/info_detail_all_smoking_room_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whole_detail_smoking_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/info_detail_all_smoking_room_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/smoking_room" />

            <TextView
                android:id="@+id/info_detail_all_smoking_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Table information" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/whole_detail_smoking_room_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/whole_detail_smoking_room_inout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/smoking_room_loc" />

            <RadioGroup
                android:id="@+id/whole_detail_smoking_room_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 있어요 -->
                <RadioButton
                    android:id="@+id/whole_detail_smoking_room_in_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/smoking_room_in" />

                <!-- 없어요 -->
                <RadioButton
                    android:id="@+id/whole_detail_smoking_room_out_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/smoking_room_out" />
            </RadioGroup>
        </LinearLayout>

        <!--anti_corona-->
        <LinearLayout
            android:id="@+id/info_detail_all_anti_corona_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whole_detail_anti_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/info_detail_all_anti_corona_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/virus" />

            <TextView
                android:id="@+id/info_detail_all_anti_corona_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Table information" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_detail_anti_corona_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/whole_detail_anti_corona_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:text="@string/date" />

            <EditText
                android:id="@+id/whole_detail_anti_corona_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="16"
                android:hint="@string/anti_corona_example"
                android:inputType="text" />

        </LinearLayout>

        <!--discount-->
        <LinearLayout
            android:id="@+id/info_detail_all_discount_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whole_detail_discount_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:focusable="false"
